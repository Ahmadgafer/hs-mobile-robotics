<launch>
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
        <arg name="model" value="burger"/>
    </include>

    <rosparam ns="graph_slam" file="$(find graph_slam)/config/config.yaml" command="load"/>

    <node ns="graph_slam" name="odometry_manager_node" pkg="graph_slam" type="odometry_manager_node" output="screen" >
        
    </node>

    <node ns="graph_slam" name="graph_manager_node" pkg="graph_slam" type="graph_manager_node" output="screen" >
        
    </node>

    <node ns="graph_slam" name="scan_matcher_node" pkg="graph_slam" type="scan_matcher_node" output="screen" >
        
    </node>

    <node pkg="tf" 
        type="static_transform_publisher" 
        name="link_robot" 
        args="0 0 0 0 0 0 robot base_link 1000" />

    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find graph_slam)/rviz/model.rviz" />
    
</launch>